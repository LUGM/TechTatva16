<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppBarTheme" parent = "ThemeOverlay.AppCompat.Dark">

        <item name="android:textColorSecondary">@color/white</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>

    </style>

    <style name="DaysTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/DaysTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="DaysTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="EventsTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_primary</item>
        <item name="tabTextAppearance">@style/EventsTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/color_primary</item>

    </style>

    <style name="EventsTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
